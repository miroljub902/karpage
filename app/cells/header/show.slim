.jumbo-header style="background-image: #{background}"
  .nav.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand href=root_path Kar Page

      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li= link_to 'Explore', '#'
          - if controller.signed_in?
            li.dropdown
              a.dropdown-toggle data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"
                'Me
                span.caret
              ul.dropdown-menu
                li= link_to 'My profile', '#'
          - else
            li= link_to 'Sign In', '#', data: { toggle: 'modal', target: '#modalSignIn' }
            li= link_to 'Join Us', '#', data: { toggle: 'modal', target: '#modalSignUp' }

  .header-content
    = content
