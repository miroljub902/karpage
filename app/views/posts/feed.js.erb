<% if %w(all friends).include? params[:scope] %>
var $container = $('#<%= params[:scope] %>-posts');
<% else %>
var $container = $('#user-posts');
<% end %>
var $posts = $container.find('.posts');
var $btnMore = $container.find('a[data-remote]');

$posts.append("<%= j render @posts, show_comments: false, truncate: true %>");
var newUrl = $btnMore.data('url').replace('__PAGE__', <%= params[:page].to_i + 1 %>);
$btnMore.attr('href', newUrl);
